{
  "manifest_version": 3,
  "name": "Interior Design Canva Scanner",
  "version": "2.2.0",
  "description": "Smart trade vendor scanner - automatically imports products from Canva boards to your checklist",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.canva.com/*",
    "https://designflow-master.preview.emergentagent.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.canva.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}